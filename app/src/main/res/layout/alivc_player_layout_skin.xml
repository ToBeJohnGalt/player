<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_view_default_live"
            style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="0dp"
            android:layout_margin="@dimen/unit_1x"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/join_default_live" />

        <Button
            android:id="@+id/btn_scan_to_view_live"
            style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="0dp"
            android:visibility="gone"
            android:layout_margin="@dimen/unit_1x"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/scan_live_qr_code" />

        <Button
            android:id="@+id/btn_input"
            style="@style/TextAppearance.AppCompat.Widget.Button.Colored"
            android:layout_width="0dp"
            android:layout_margin="@dimen/unit_1x"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/input_live_link" />

    </LinearLayout>

    <com.aliyun.vodplayerview.widget.AliyunVodPlayerView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
